---
type Props = {
  fullWidth?: boolean;
};

const {fullWidth = false} = Astro.props;

---

<div
  class=`prose dark:prose-invert prose-h1:font-bold prose-h1:text-xl prose-a:text-blue-600 prose-p:text-justify prose-img:rounded-xl prose-headings:underline ${fullWidth && "max-w-none"}`>
  <slot />
</div>